{
  "name": "componark",
  "version": "0.39.0",
  "author": "Knowark <it@knowark.com>",
  "description": "Knowark's Web Components Library",
  "license": "ISC",
  "scripts": {
    "test": "jest --coverage",
    "dev": "webpack serve --mode development --env development",
    "prod": "webpack --mode production --env production"
  },
  "repository": {
    "type": "git",
    "url": "https://git.knowark.com/web/componark.git"
  },
  "keywords": [
    "web",
    "components"
  ],
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "types": "src/components/index",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@knowark/injectarkjs": "^0.4.1",
    "@knowark/routarkjs": "^0.5.1",
    "@material/button": "^9.0.0",
    "@material/card": "^9.0.0",
    "@material/dialog": "^9.0.0",
    "@material/drawer": "^9.0.0",
    "@material/fab": "^9.0.0",
    "@material/floating-label": "^9.0.0",
    "@material/form-field": "^9.0.0",
    "@material/list": "^9.0.0",
    "@material/select": "^9.0.0",
    "@material/snackbar": "^9.0.0",
    "@material/tab-bar": "^9.0.0",
    "@material/toolbar": "^2.3.0",
    "bootstrap": "^4.6.0",
    "chart.js": "^2.9.4",
    "fibers": "^5.0.0",
    "google-palette": "^1.1.0",
    "highlight.js": "^10.5.0",
    "jquery": "^3.5.1",
    "leaflet": "^1.7.1",
    "material-components-web": "^9.0.0",
    "material-design-icons": "^3.0.1",
    "popper.js": "^1.16.1",
    "remove": "^0.1.5",
    "signature_pad": "^3.0.0-beta.4",
    "tabulator-tables": "^4.9.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@types/jest": "^26.0.20",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "canvas": "^2.6.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.0.1",
    "document-register-element": "^1.14.3",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.1",
    "ignore-loader": "^0.1.2",
    "inspect-loader": "^1.0.0",
    "jest": "^26.6.3",
    "jest-canvas-mock": "^2.3.0",
    "jsdom": "^16.4.0",
    "mini-css-extract-plugin": "^1.3.4",
    "npm-check-updates": "^11.0.2",
    "postcss-loader": "^4.2.0",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "to-string-loader": "^1.1.6",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "directories": {
    "test": "tests"
  },
  "standard": {
    "env": [
      "jest",
      "customElements"
    ]
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "setupFiles": [
      "./tests/__mocks__/canvasMock.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverageFrom": [
      "**/src/**",
      "!**/showcase/**"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@knowark)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|less|sass|scss)$": "<rootDir>/tests/__mocks__/styleMock.js"
    }
  }
}
