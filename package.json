{
  "name": "componark",
  "version": "0.42.2",
  "author": "Knowark <it@knowark.com>",
  "description": "Knowark's Web Components Library",
  "license": "ISC",
  "scripts": {
    "test": "jest --coverage",
    "dev": "webpack serve --mode development --env development",
    "prod": "webpack --mode production --env production"
  },
  "repository": {
    "type": "git",
    "url": "https://git.knowark.com/web/componark.git"
  },
  "keywords": [
    "web",
    "components"
  ],
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "types": "src/components/index",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@knowark/injectarkjs": "^0.4.3",
    "@knowark/routarkjs": "^0.5.1",
    "@material/button": "^13.0.0",
    "@material/card": "^13.0.0",
    "@material/dialog": "^13.0.0",
    "@material/drawer": "^13.0.0",
    "@material/fab": "^13.0.0",
    "@material/floating-label": "^13.0.0",
    "@material/form-field": "^13.0.0",
    "@material/list": "^13.0.0",
    "@material/select": "^13.0.0",
    "@material/snackbar": "^13.0.0",
    "@material/tab-bar": "^13.0.0",
    "@material/toolbar": "^2.3.0",
    "bootstrap": "^5.1.3",
    "chart.js": "^3.6.0",
    "fibers": "^5.0.0",
    "google-palette": "^1.1.0",
    "highlight.js": "^11.3.1",
    "jquery": "^3.6.0",
    "leaflet": "^1.7.1",
    "material-components-web": "^13.0.0",
    "material-design-icons": "^3.0.1",
    "popper.js": "^1.16.1",
    "remove": "^0.1.5",
    "signature_pad": "^3.0.0-beta.4",
    "tabulator-tables": "^5.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@types/jest": "^27.0.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.3.1",
    "canvas": "^2.8.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.1.0",
    "css-loader": "^6.5.1",
    "document-register-element": "^1.14.3",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "ignore-loader": "^0.1.2",
    "inspect-loader": "^2.0.0",
    "jest": "^27.3.1",
    "jest-canvas-mock": "^2.3.1",
    "jsdom": "^18.1.0",
    "mini-css-extract-plugin": "^2.4.4",
    "npm-check-updates": "^12.0.2",
    "postcss-loader": "^6.2.0",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "to-string-loader": "^1.2.0",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  },
  "directories": {
    "test": "tests"
  },
  "standard": {
    "env": [
      "jest",
      "customElements"
    ]
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "setupFiles": [
      "./tests/__mocks__/canvasMock.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverageFrom": [
      "**/src/**",
      "!**/showcase/**"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@knowark)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|less|sass|scss)$": "<rootDir>/tests/__mocks__/styleMock.js"
    }
  }
}
