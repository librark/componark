{
  "name": "componark",
  "version": "1.0.4",
  "author": "Knowark <it@knowark.com>",
  "description": "Knowark's Web Components Library",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest --coverage",
    "dev": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' webpack serve --mode development --env development",
    "prod": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' webpack --mode production --env production"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/knowark/componark.git"
  },
  "keywords": [
    "web",
    "components"
  ],
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "types": "src/components/index",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@knowark/injectarkjs": "^0.5.0",
    "@knowark/routarkjs": "^0.6.2",
    "@types/jest": "^27.0.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.3.1",
    "canvas": "^2.10.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.1.0",
    "css-loader": "^6.5.1",
    "document-register-element": "^1.14.3",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "ignore-loader": "^0.1.2",
    "inspect-loader": "^2.0.0",
    "jest": "^27.3.1",
    "jest-canvas-mock": "^2.3.1",
    "jsdom": "^18.1.0",
    "mini-css-extract-plugin": "^2.4.4",
    "npm-check-updates": "^16.3.8",
    "postcss-loader": "^6.2.0",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "to-string-loader": "^1.2.0",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  },
  "directories": {
    "test": "tests"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "transform": {},
    "setupFiles": [
      "./tests/__mocks__/canvasMock.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverageFrom": [
      "**/src/**",
      "!**/showcase/**"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@knowark)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|less|sass|scss)$": "<rootDir>/tests/__mocks__/styleMock.js"
    }
  }
}
