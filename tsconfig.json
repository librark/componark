{
  "include": ["lib/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "lib",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "types",
    "paths": {
      "#base*": [
          "base",
          "base*"
      ]
    }
  }
}
